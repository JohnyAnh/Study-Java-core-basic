package model;

public class CounterModel {
	private int value;
	
	public CounterModel() {
		// TODO Auto-generated constructor stub
		this.value = 0;
	}

	/**
	 * @return the value
	 */
	public int getValue() {
		return value;
	}

	/**
	 * @param value the value to set
	 */
	public void setValue(int value) {
		this.value = value;
	}
	
	public void incresment() {
		this.value++;
	}
	public void decrement() {
		this.value--;
	}
}
